generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

enum Role {
  ADMIN
  USER
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  description   String
  coverImageUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  images        Image[]
}

model Video {
  id        String   @id @default(cuid())
  title     String
  youtubeUrl String
  thumbnailUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  createdAt DateTime @default(now())
}

model CompanyInfo {
  id            String   @id @default(cuid())
  name          String
  email         String?
  phone         String?
  instagram     String?
  address       String?
  whatsappLink  String?
  whatsappNumber String?
  aboutText     String?
  updatedAt     DateTime @updatedAt
}

model HomeBanner {
  id                 String   @id @default(cuid())
  title              String
  subtitle           String?
  backgroundImageUrl String?
  ctaText            String?
  ctaLink            String?
  updatedAt          DateTime @updatedAt
}

model Logs {
  id        String   @id @default(cuid())
  action    String
  message   String?
  meta      Json?
  createdAt DateTime @default(now())
}

model InstitutionalText {
  id        String   @id @default(cuid())
  key       String   @unique
  content   String
  updatedAt DateTime @updatedAt
}
